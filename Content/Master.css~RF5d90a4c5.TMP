/*STATEMENT*/

.statementLeft{
    float:left;
    width:33%;
}

.statementRight{
    float:right;
    width:33%;
}

.rightButton{
    float:right;
}

.statementMiddle{
    display:inline-block;
    width:33%;
}

#statementSummary{
    border: 1px solid #ff0000;
    text-align:center;
    font-size:25px;
}

#key{
    text-align:center;
}

.modalDialog {
    position: fixed;
    font-family: Arial, Helvetica, sans-serif;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 99999;
    opacity:0;
    -webkit-transition: opacity 400ms ease-in;
    -moz-transition: opacity 400ms ease-in;
    transition: opacity 400ms ease-in;
    pointer-events: none;
}
.modalDialog:target {
    opacity:1;
    pointer-events: auto;
}
.modalDialog > div {
    width: 400px;
    position: relative;
    margin: 10% auto;
    padding: 5px 20px 13px 20px;
    border-radius: 10px;
    background: #fff;
    background: -moz-linear-gradient(#fff, #999);
    background: -webkit-linear-gradient(#fff, #999);
    background: -o-linear-gradient(#fff, #999);
}
.close {
    background: #ffffff;
    color: #ffffff;
    line-height: 25px;
    position: absolute;
    right: -12px;
    text-align: center;
    top: -10px;
    width: 24px;
    text-decoration: none;
    font-weight: bold;
    -webkit-border-radius: 12px;
    -moz-border-radius: 12px;
    border-radius: 12px;
   
}
.close:hover {
    background: #00d9ff;
}

#searchStatement{
    color:#ffffff;
    background-color:cornflowerblue;
    font-size:20px;
}

#search{    
    border-top:1px solid #fff;
    font-size:15px;
    margin-left:10px;
}

#statementMain{
    border: 1px solid #1f10be;
}

table{
    width:100%;
}

